<div class="social-sharing social-icons size-{{ settings.soc_icon_size_share }}">
  
  {% if template contains 'product' %}
  
  <div class="share-label">{{ 'general.social.title' | t }}</div>
  
  {% assign url_to_share = shop.url | append: product.url %}
  {% capture img_to_share %}http:{{ product.featured_image | product_img_url: 'master' }}{% endcapture %}
  {% assign title_to_share = product.title %}

  {% else %}
  {% assign url_to_share = shop.url | append: social-sharing.url %}
  {% assign img_to_share = false %}
  
  {% if template contains 'article' or template contains 'blog' %}
  {% if article.image %}
    {% assign img_to_share = article.image | img_url: 'master' %}
  {% endif %}
  {% endif %}
  
  {% assign title_to_share = social-sharing.title %}
  {% endif %}

  {% capture social_check_out %}{{ 'general.social.check_out' | t: title: title_to_share }}{% endcapture %}
  
  <a class="facebook" title="{{ 'general.social.on_facebook' | t | escape }}" target="_blank" href="https://www.facebook.com/sharer/sharer.php?u={{ url_to_share | url_param_escape }}"><i class="icon-facebook"><span>{{ 'general.social.on_facebook' | t }}</span></i></a> 
  
  <a class="twitter" title="{{ 'general.social.on_twitter' | t | escape }}" target="_blank" href="https://twitter.com/intent/tweet?text=Check out {{ social_check_out | url_param_escape }}: {{ url_to_share | url_param_escape }}"><i class="icon-twitter"><span>{{ 'general.social.on_twitter' | t }}</span></i></a>
 
  {% if img_to_share != false %}
  <a class="pinterest" title="{{ 'general.social.on_pinterest' | t | escape }}" target="_blank" href="//pinterest.com/pin/create/button/?url={{ url_to_share | url_param_escape }}&amp;media={{ img_to_share | url_param_escape }}&amp;description={{ title_to_share | url_param_escape }}"><i class="icon-pinterest"><span>{{ 'general.social.on_pinterest' | t }}</span></i></a>
  {% endif %}
  
  <a class="email" title="{{ 'general.social.by_email' | t | escape }}" href="mailto:?subject={{ social_check_out | url_param_escape }}&amp;body={{ social_check_out | url_param_escape }}:%0D%0A%0D%0A{{ url_to_share | url_param_escape }}"><i class="icon-mail"><span>{{ 'general.social.by_email' | t }}</span></i></a>

</div>