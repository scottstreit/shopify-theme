/* home page nav adjustments */
.template-index header .nav {
  float: right;
  background: #ffffff;
  color: $nav-col;
}
.template-index .nav li a:hover {
  color: $nav-hover;
}
.template-index #pageheader nav > ul > li > a:hover > span {
  border-bottom-color: $nav-hover;
}
.template-index.header-has-bg #pageheader nav > ul > li > a:hover > span {
    border-bottom-color: $nav-hover;
}


.nav a {
  padding: 0 1em;
  /* fixed height required for dropdown top */
  line-height: 3em;
  height: 3em;
}

.nav .mob-exp { display: none; }

.nav > ul > li {
  position: relative;
}

.nav > ul > li > a {
  border: 1px solid transparent;
  white-space: nowrap;
}

.nav > ul > li.has-children > a {
  transition: none;
}

.nav > ul > li.has-children > a:after {
  content: '+';
  margin: 0 -0.5em 0 0.3em;
}

.nav > ul > li.has-children.reveal > a,
.nav > ul > li.has-children:hover > a {
  color: $normal-text-col;
  background: $dropdown-bg-col;
  position: relative;
  z-index: 52;
  border-color: $dropdown-border-col;
  border-bottom-color: $dropdown-bg-col;
}

.nav > ul > li.has-children.reveal > ul,
.nav > ul > li.has-children:hover > ul {
  display: block;
}

.nav > ul > li > ul {
  display: none;
  position: absolute;
  z-index: 50;
  left: 0;
  top: 3em;
  margin-top: -1px;
  width: 250px;
  border: 1px solid $dropdown-border-col;
  background: $dropdown-bg-col;
  color: $normal-text-col;
  text-align: left;
  letter-spacing: 0;
}

.nav > ul > li > ul.anchor-right {
  left: auto;
  right: 0;
}

.nav > ul > li > ul li {
  display: block;
}

.nav > ul > li > ul > li {
  font-size: $nav-font-size-sub;
}

.nav li ul a {
  display: block;
  padding-top: 0.3em;
  padding-bottom: 0.3em;
  height: auto;
  line-height: inherit;
  margin-left: 0;
  transition: color 100ms;
}

.nav li ul a:hover {
  color: $nav-hover;
}

.nav li ul li:first-child a {
  padding-top: 0.6em;
}

.nav li ul li:last-child a {
  padding-bottom: 0.6em;
}

.nav li ul ul {
  position: static;
  background: $nav-sub-bg;
  color: rgba($normal-text-col, 0.6);
  text-transform: none;
  padding: 0.2em 0;
}

{% if settings.nav_coll_secdrops %}
.nav li ul li.has-children > a:after {
  content: ' +';
}

.nav li ul li.has-children.reveal > a:after {
  content: ' -';
}

.nav li ul ul {
  display: none;
  min-height: 1px;
}
{% endif %}

.nav li ul ul ul {
  padding-left: 1em;
}

