/* Responsive images and videos. */
img, iframe { max-width: 100%; }
img { height: auto; }

/* Control the pages maximum width. */
.container {
  margin: 0 auto;
  max-width: $site-max-width;
  width: 90%;
}

/* Grids of products and collections, menus, buttons */
.buttons, .articles, .product-details > div {
  margin: $gutter 0;
  padding: 0;
}
.buttons li, .nav li, .articles li {
  list-style-type: none;
  margin: 0;
  padding: 0;
}
.articles li {
  padding: $gutter 0;
}
.buttons li {
  padding: $gutter/4 0;
}
.buttons li, .nav li, .nav li a {
  display:inline-block;
}

/* Medium and large screens */
.row {
  margin-left: -$gutter;
  margin-right: -$gutter;
}
.column {
  float: left;
  padding-left: $gutter;
  padding-right: $gutter;
}
.column.half {
  width: 50%;
}
.column.quarter {
  width: 25%;
}
.column.three-quarters {
  width: 75%;
}
.column.third {
  width: 33.33333%;
}
.column.fifth {
  width: 20%;
}
.column.full {
  width: 100%;
}

.column.bleed {
  padding-left: 0;
  padding-right: 0;
  border-top: 10px solid #ffffff;
}

.column.half.bleed:nth-child(odd) {
  border-left: 5px solid #ffffff;
}
.column.half.bleed:nth-child(even) {
  border-right: 5px solid #ffffff;
}

.first-in-row {
  clear: left;
}

.grid {
  @extend .row;
}
header, footer, #main {
  @extend .column;
}

header, footer, #main {
  width: 100%;
}

@media (max-width: $breakpoint-small-screen) {
  body > .container {
    width: auto;
  }
  .column.half,
  .column.third {
    width: 100%;
  }
  .column.quarter,
  .column.fifth {
    width: 50%;
  }
  .column.three-quarters {
    width: 100%;
  }
  .column.half.bleed:nth-child(odd) {
    border-left: 0;
  }
  .column.half.bleed:nth-child(even) {
    border-right: 0;
  }
}

/* Number spinners */
input[type=number]::-webkit-inner-spin-button,
input[type=number]::-webkit-outer-spin-button {
    -webkit-appearance: none;
    margin: 0;
}

/* Utility classes: Hidden, float left, float right, etc. */

.hidden { display: none; }
.left { float: left; }
.right { float: right; }
.align-center, .align-centre { text-align: center; }

/* Override to globally-hosted search.css on the /search page */
#searchresults {
  margin: 0;
}

#searchresults input {
  width: auto;
}

