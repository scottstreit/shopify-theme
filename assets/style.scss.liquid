.simple-popup {
  position: absolute;
  z-index: 10000;
  width: 160px;
  padding: 10px 15px;
  border: 1px solid $alt-text-col;
  color: $alt-text-col;
  background: $alt-text-bg;
  -moz-border-radius: 3px;
  -webkit-border-radius: 3px;
  border-radius: 3px;
  -webkit-box-shadow: 0 0 2px 0 #888;
  -moz-box-shadow: 0 0 2px 0 #888;
  box-shadow: 0 0 2px 0 #888;
  text-align: center;
}

/* Specific to areas of the page */
$mobile-nav-btn-line-height: 38px;
#mobile-nav {
  display: none;
  text-align: right;
  position: absolute;
  z-index: 14;
  top: 0;
  left: 0;
  width: 100%;
  padding-top: 5px;
  color: {% if settings.col_head_bg_use %}$nav-col-overlay{% else %}$nav-col{% endif %};

  .header-has-bg & {
    color: $nav-col-overlay;
  }
  @include clearfix();
}

#mobile-nav > .mobile-nav-toggle {
  @include nav-font-style();
  float: left;
  position: relative;
  padding: 0 1em 0 2.5em;
  line-height: $mobile-nav-btn-line-height;
  min-height: 0;
}

#mobile-nav > .mobile-nav-toggle > span {
  position: absolute;
  background: {% if settings.col_head_bg_use %}$nav-col-overlay{% else %}$nav-col{% endif %};
  .header-has-bg & {
    background: $nav-col-overlay;
  }
  left: 0.75em;
  width: 1em;
  height: 3px;
  top: 0;
  margin-top: 12px;
}

#mobile-nav > .mobile-nav-toggle > span:nth-child(1) { top: 5px; }
#mobile-nav > .mobile-nav-toggle > span:nth-child(2) { top: 10px; }

#mobile-nav > .cart-summary {
  @include nav-font-style();
  padding-left: 1em;
  padding-right: 1em;
  line-height: $mobile-nav-btn-line-height;
}

#mobile-nav-return {
  z-index: 15;
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 0;
  background: rgba(0,0,0,0.3);
  opacity: 0;
  transition: opacity 400ms;
}

#scroll-top {
  position: fixed;
  z-index: 1000;
  bottom: 0;
  left: 50%;
  margin-left: 535px;
  margin-bottom: -90px;
  transition: margin-bottom 250ms;
  color: {{ settings.col_scrollup }};
  background: url({{ 'scrollup-' | append: settings.col_scrollup | append: '.png' | asset_url }}) no-repeat center top;
  min-width: 34px;
  padding-top: 55px;
  text-align: center;
  @include nav-font-style();
}

.reveal-scroll-top #scroll-top {
  margin-bottom: 10px;
}

#comments {
  @extend .rte;
  > ul {
    padding: 0;
    > li {
      list-style: none;
    }
  }
  .comment-author {
    text-align: left;
  }
}

.feedback {
  background: mix($normal-text-col, $content-bg, 8%);
  border: 1px solid mix($normal-text-col, $content-bg, 50%);
  padding: 1em 1.5em;
  font-style: italic;
  border-radius: 2px;
}

#pageheader {
  float: none;
  padding-bottom: $content-header-overlap;
  position: relative;
  color: $nav-col;
  @include nav-font-style();
  @include clearfix();
}

#pageheader .head-img-cont {
  position: absolute;
  left: 0;
  right: 0;
  top: 0;
  bottom: 0;
  background-position: top center;
}

#pageheader .head-img-cont.fillmode-repeat {
  background-repeat: repeat;
}

#pageheader .head-img-cont.fillmode-centered {
  background-repeat: no-repeat;
}

#pageheader .head-img-cont.fillmode-repeat img,
#pageheader .head-img-cont.fillmode-centered img {
  display: none;
}

#pageheader .head-img-cont .overlay {
  z-index: 3;
}

#pageheader .head-img-cont .overlay .text {
  color: $heading-text-col;
  text-shadow: 1px 0px 2px #E32526;
  margin: 0.8em 0;
}

/* Headers about the site */
{% if settings.col_head_bg_use %}
#pageheader {
  color: $nav-col-overlay;
}
{% endif %}
.header-has-bg #pageheader {
  color: $nav-col-overlay;
  min-height: 350px;
}

/* Homepage header */
{% if settings.col_head_bg_use %}
.template-index #pageheader {
  background-color: {{ settings.col_head_bg_home }};
}
{% endif %}
{% if settings.head_img_home_height != '' %}
.header-has-bg.template-index #pageheader {
  min-height: {{ settings.head_img_home_height }}px - $content-header-overlap;
}
{% endif %}

/* Collection/collection-listing/search header */
{% if settings.col_head_bg_use %}
.template-collection #pageheader,
.template-list-collections #pageheader,
.template-search #pageheader {
  background-color: {{ settings.col_head_bg_coll }};
}
{% endif %}
{% if settings.head_img_coll_height != '' %}
.header-has-bg.template-collection #pageheader,
.header-has-bg.template-list-collections #pageheader,
.header-has-bg.template-search #pageheader {
  min-height: {{ settings.head_img_coll_height }}px - $content-header-overlap;
}
{% endif %}

/* Product header */
{% if settings.col_head_bg_use %}
.template-product #pageheader {
  background-color: {{ settings.col_head_bg_prod }};
}
{% endif %}
{% if settings.head_img_prod_height != '' %}
.header-has-bg.template-product #pageheader {
  min-height: {{ settings.head_img_prod_height }}px - $content-header-overlap;
}
{% endif %}

/* Blog/article header */
{% if settings.col_head_bg_use %}
.template-blog #pageheader,
.template-article #pageheader {
  background-color: {{ settings.col_head_bg_blog }};
}
{% endif %}
{% if settings.head_img_blog_height != '' %}
.header-has-bg.template-blog #pageheader,
.header-has-bg.template-article #pageheader {
  min-height: {{ settings.head_img_blog_height }}px - $content-header-overlap;
}
{% endif %}

/* Cart header */
{% if settings.col_head_bg_use %}
.template-cart #pageheader {
  background-color: {{ settings.col_head_bg_cart }};
}
{% endif %}
{% if settings.head_img_cart_height != '' %}
.header-has-bg.template-cart #pageheader {
  min-height: {{ settings.head_img_cart_height }}px - $content-header-overlap;
}
{% endif %}

/* Customer account pages header */
{% if settings.col_head_bg_use %}
.template-customer-area #pageheader {
  background-color: {{ settings.col_head_bg_cust }};
}
{% endif %}
{% if settings.head_img_cust_height != '' %}
.header-has-bg.template-customer-area #pageheader {
  min-height: {{ settings.head_img_cust_height }}px - $content-header-overlap;
}
{% endif %}

/* All pages, aside from the above, header */
{% if settings.col_head_bg_use %}
#pageheader {
  background-color: {{ settings.col_head_bg_page }};
}
{% endif %}
{% if settings.head_img_page_height != '' %}
.header-has-bg #pageheader {
  min-height: {{ settings.head_img_page_height }}px - $content-header-overlap;
}
{% endif %}

#pageheader .background {
  opacity: 0;
  z-index: 1;
}

#pageheader .background-shadow {
  position: absolute;
  z-index: 2;
  left: 0;
  width: 100%;
}

$header-shadow-spread: 100px;
$header-shadow-spread-offset: 10px;

#pageheader .background-shadow.main {
  top: 0;
  height: 100%;
  box-shadow: 0 (-($header-shadow-spread - $header-shadow-spread-offset)) $header-shadow-spread (-$header-shadow-spread) black inset;
}

#pageheader .background-shadow.content-top {
  bottom: 0;
}

#pageheader .background-shadow.content-top .container {
  box-shadow: 0 0 $header-shadow-spread (-$header-shadow-spread-offset) black;
  height: $content-header-overlap;
}

#pageheader > .container {
  position: relative;
  background: transparent;
  z-index: 20;
}

.logo {
  color: $logo-col;
  font-family: $logo-font-family;
  font-size: $logo-font-size;
  font-weight: normal;
  line-height: 1.5em;
}

#pageheader .logo {
  margin: 0;
  float: left;
  width: $header-col-logo-width;
}

#pageheader .logo > .image,
#pageheader .logo > .text {
  display: inline-block;
  padding: 20px 0;
}

#pageheader .logo h1 {
  font-family: inherit;
  font-size: inherit;
  font-weight: inherit;
  line-height: inherit;
  color: inherit;
  text-align: left;
  margin: 0;
  padding: 0;
}

{% if settings.col_head_bg_use %}#pageheader .logo,{% endif %}
.header-has-bg #pageheader .logo {
  color: $logo-col-overlay;
}

#pageheader .logo .image {
  max-width: 100%;
}

#pageheader .logo .image img {
  vertical-align: top;
  width: {{ settings.logo_w }}px;
}

#pageheader .logo .image .mobile-only,
#pageheader .logo .hidden {
  display: none;
}

#pageheader .links-etc {
  float: right;
  width: $header-col-links-width;
  text-align: right;
}

#pageheader .links-etc .mobile-nav-toggle {
  @include nav-font-style();
  display: none;
  border: 1px solid;
  padding: 0.5em 0.6em;
  margin: 0.8em 1em;
  float: right;
}

#pageheader .links-etc .social-icons {
  margin-right: 0.6em;
}

#pageheader .links-etc .social-icons,
#pageheader .links-etc .upper-link {
  display: inline-block;
  vertical-align: middle;
  font-size: 0.9em;
  line-height: 4em;
}

#pageheader .links-etc .upper-link > a {
  padding: 0 0.6em;
  height: 4em;
  display: inline-block;
  border: 1px solid transparent;
  border-bottom: none;
}

#pageheader .links-etc .checkout-link.has-popup-tab {
  position: relative;
}

#pageheader .links-etc .checkout-link.has-popup-tab > a {
  border: 1px solid transparent;
  border-bottom: none;
  transition: none;
}

#pageheader .links-etc .checkout-link.has-popup-tab:hover > a,
#pageheader .links-etc .checkout-link.has-popup-tab.reveal > a {
  position: relative;
  background: $content-bg;
  border-color: $dropdown-border-col;
  color: $normal-text-col;
  z-index: 51;
}

#pageheader .links-etc .checkout-link .popup-tab {
  display: none;
  background: $content-bg;
  border: 1px solid $dropdown-border-col;
  color: $normal-text-col;
  line-height: $body-line-height;
  position: absolute;
  z-index: 50;
  top: 4em;
  right: 0;
  width: 300px;
  margin-top: -1px;
}

#pageheader .links-etc .checkout-link .popup-tab a:hover {
  color: darken($normal-text-col, 15%);
}

#pageheader .links-etc .checkout-link.has-popup-tab:hover .popup-tab,
#pageheader .links-etc .checkout-link.has-popup-tab.reveal .popup-tab {
  display: block;
}

#pageheader .links-etc .checkout-link .popup-tab .item {
  padding: 1em;
  text-align: left;
}

#pageheader .links-etc .checkout-link .popup-tab .item img {
  float: left;
  width: 67px;
}

#pageheader .links-etc .checkout-link .popup-tab .item .detail {
  margin: 0 35px 0 80px;
}

#pageheader .links-etc .checkout-link .popup-tab .item .title {
  display: block;
}

#pageheader .links-etc .checkout-link .popup-tab .item .price {
  padding: 0.5em 0 0;
}

#pageheader .links-etc .checkout-link .popup-tab .item .right {
  float: right;
  text-align: right;
}

#pageheader .links-etc .checkout-link .popup-tab .item .remove {
  padding-top: 0;
}

#pageheader .links-etc .checkout-link .popup-tab .item .qty {
  text-align: center;
  margin: 1em 0 0;
  padding: 0.3em 0.5em;
  border: 1px solid lighten($normal-text-col, 20%);
}

#pageheader .links-etc .checkout-link .popup-tab .total {
  background: $other-content-bg;
}

#pageheader .links-etc .checkout-link .popup-tab .checkout {
  background: $alt-text-bg;
  color: $alt-text-titles-col;
}

#pageheader .links-etc .checkout-link .popup-tab a.checkout:hover {
  background: darken($alt-text-bg, 10%);
  color: darken($alt-text-titles-col, 10%);
}

#pageheader .links-etc .checkout-link .popup-tab .total,
#pageheader .links-etc .checkout-link .popup-tab .checkout {
  display: block;
  padding: 1em;
  text-align: center;
}


#pageheader .links-etc .switcher {
  margin-left: 3px;
  font-size: 0.9em;
  display: inline-block;
  vertical-align: middle;
  position: relative;
}

#pageheader .links-etc .switcher .selected-currency {
  padding: 4px 5px;
  border: 1px solid $dropdown-border-col;
  cursor: pointer;
  -webkit-border-radius: 2px;
  -moz-border-radius: 2px;
  border-radius: 2px;
}

#pageheader .links-etc .switcher .switcher-drop {
  display: none;
  position: absolute;
  right: 0;
  top: 80%;
  z-index: 50;
  background: url({{ 'loading.gif' | asset_url }}) no-repeat -100px -100px; /* fix ie8 hover */
}

#pageheader .links-etc .switcher .switcher-drop .inner {
  margin-top: 1.3em;
  line-height: 1em;
  padding: 8px 15px 6px;
  background: $content-bg;
  border: 1px solid $dropdown-border-col;
  color: $normal-text-col;
  white-space: nowrap;
}

#pageheader .links-etc .switcher .switcher-drop .inner:before {
  content: " ";
  width: 0px;
  height: 0px;
  border-style: solid;
  border-width: 0 6px 6px 6px;
  border-color: transparent transparent $dropdown-border-col transparent;
  position: absolute;
  top: 1.3em;
  right: 15px;
  margin-top: -5px;
}

#pageheader .links-etc .switcher .switcher-drop .inner:after {
  content: " ";
  width: 0px;
  height: 0px;
  border-style: solid;
  border-width: 0 6px 6px 6px;
  border-color: transparent transparent $content-bg transparent;
  position: absolute;
  top: 1.3em;
  right: 15px;
  margin-top: -4px;
}

#pageheader .links-etc .switcher.show-drop .switcher-drop,
#pageheader .links-etc .switcher:hover .switcher-drop {
  display: block;
  -webkit-animation: reveal-down 0.2s ease-out 0s 1 normal none;
  animation: reveal-down 0.2s ease-out 0s 1 normal none;
}

#pageheader .links-etc .switcher .switcher-drop select {
  min-width: 6em;
}

#pageheader nav > ul > li > a > span {
  border-bottom: 2px solid transparent;
  transition: border-color 200ms;
}

#pageheader nav > ul > li > a:hover > span {
  border-bottom-color: $nav-col;
}

/*{% if settings.col_head_bg_use %}#pageheader nav > ul > li > a:hover > span,{% endif %}*/
.header-has-bg #pageheader nav > ul > li > a:hover > span {
  border-bottom-color: $nav-col-overlay;
}

#pageheader nav > ul > li.has-children.reveal > a:hover > span,
#pageheader nav > ul > li.has-children:hover > a:hover > span {
  border-bottom-color: transparent;
}

#main {
  position: relative;
  z-index: 10;
  margin-top: -$content-header-overlap;
  background-color: $content-bg;
  text-align: center;
}

#main.margin-down {
  margin-top: 100px;
}

#main > h1 {
  @extend .page-title;
}

#pagefooter {
  padding: $content-row-padding 0;
  background-color: $content-bg;
  text-align: center;
}

#pagefooter .nav a:hover,
#pagefooter .copyright a:hover {
  color: darken($normal-text-col, 10%);
}

#pagefooter .nav {
  @include nav-font-style();
  margin: 1em 0;
}

#pagefooter .social-icons {
  margin: 1em 0 2em;
  font-size: $navigation-font-size;
}

#pagefooter .copyright {
  font-size: 0.8em;
  .seg {
    border-right: 1px solid $normal-text-col;
    margin-right: 0.4em;
    padding-right: 0.75em;
  }
  a:hover {
    text-decoration: underline;
  }
}

#related-products {
  margin-left: -$gutter;
  margin-right: -$gutter;
}

#related-products .product-list {
  a {
    display: inline-block;
    vertical-align: middle;
    width: 12.5%;
  }
  img {
    vertical-align: top;
  }
  .title {
    {% if settings.prod_rel_titles %}
    display: block;
    margin: 0.5em 5px 1em;
    font-size: 80%;
    line-height: 1.2em;
    {% else %}
    display: none;
    {% endif %}
  }
}

.giftcard {
  max-width: 700px;
  margin: 0 auto;
}

/* Media queries for different screen sizes */
@media screen and (max-width: 1200px) {
  #scroll-top {
  	display: none;
  }

  #related-products .product-list a {
    width: 20%;
  }
}

$mobile-nav-width:	260px;
@media screen and (max-width: $breakpoint-small-screen) {
  .column.half .rte {
    padding-left: 0;
    padding-right: 0;
  }

  #pageheader .background-shadow.content-top {
    display: none;
  }

  #pageheader .links-etc {
    position: fixed;
    overflow: auto;
    text-align: left;
    background: $dropdown-bg-col;
    color: $normal-text-col;
    border-right: 1px solid $dropdown-border-col;
    left: 0;
    width: $mobile-nav-width;
    top: 0;
    height: 100%;
    margin-left: -$mobile-nav-width;
    z-index: 500;
    transition: margin-left 400ms ease-in-out;
  }

  #pageheader .links-etc .mobile-nav-toggle {
    display: inline-block;
  }

  #pageheader .links-etc .social-icons {
    margin-left: 1em;
    display: block;
    padding: 1em 0 0;
  }

  #pageheader .links-etc .upper-link {
    display: block;
    line-height: 1em;
  }

  #pageheader .links-etc .upper-link > a {
    height: auto;
    padding: 0.5em 1em;
  }

  #pageheader .links-etc .checkout-link,
  #pageheader .links-etc .switcher .selected-currency {
    display: none;
  }

  #pageheader .links-etc .switcher {
    margin-left: 0;
  }

  #pageheader .links-etc .switcher .switcher-drop {
    clear: both;
    position: static;
    display: block;
  }

  #pageheader .links-etc .switcher:hover .switcher-drop {
    -webkit-animation: none;
    animation: none;
  }

  #pageheader .links-etc .switcher .switcher-drop .inner {
    border: none;
    padding: 0 1em;
  }

  #pageheader .links-etc .switcher .switcher-drop .inner:before,
  #pageheader .links-etc .switcher .switcher-drop .inner:after {
    display: none;
  }

  #pageheader .links-etc .switcher .switcher-drop select {
    color: #333;
    margin-left: 1em;
  }

  #pageheader .links-etc .nav {
    margin: 2em 0 0;
  }

  .nav .mob-exp {
    display: inline;
    position: absolute;
    right: 1em;
    top: 9px;
    color: inherit;
    background: transparent;
    padding: 9px 1em 7px;
    width: 2.8em;
    min-height: 0;
    border: 1px solid;
    z-index: 53;
  }

  #pageheader .links-etc .nav li a {
    line-height: 1.2em;
    padding: 1.2em 1em;
    height: auto;
  }

  #pageheader .links-etc .nav li,
  #pageheader .links-etc .nav li a,
  #pageheader .links-etc .nav > ul > li > ul {
    display: block;
    position: relative;
    width: auto;
    white-space: normal;
    top: 0;
    left: 0;
  }

  /* Click to expand all subnav */
  #pageheader .links-etc .nav > ul > li ul {
    display: none;
    min-height: 0; /* disable desktop js */
  }

  .nav > ul > li.has-children > a:after { display: none; }

  #pageheader .links-etc .nav > ul > li > ul a {
    padding-left: 2em;
  }

  #pageheader .links-etc .nav > ul > li > ul {
    margin-top: 0;
    border-right: none;
    border-left: none;
    padding: 0.5em 0;
  }

  #pageheader .links-etc .nav > ul > li.has-children:hover > a {
    border-color: transparent;
  }

  .nav > ul > li > ul > li { font-size: 1em; }

  .reveal-mobile-nav #pageheader .links-etc {
    margin-left: 0;
  }

  .reveal-mobile-nav #mobile-nav-return {
    height: 100%;
    opacity: 1;
  }

  .flexslider .caption {
    position: static;
  }

  .social-icons a {
    margin-bottom: 1em;
  }

  .social-icons .div {
    display: none;
  }

  #pageheader {
    padding: 0;
  }

  #pageheader > .container {
    pointer-events: none;
    .links-etc, a {
      pointer-events: auto;
    }
  }

  /* sigh */
  .header-has-bg.template-index #pageheader { min-height: {{ settings.head_img_home_height | divided_by: 2 }}px!important; }
  .header-has-bg #pageheader { min-height: 0!important; }

  {% if settings.head_img_hideonmob %}
  #pageheader .head-img-cont {
    display: none;
  }
  .header-has-bg #pageheader .logo {
    color: $logo-col;
  }
  {% endif %}

  {% if settings.col_head_bg_use %}
  #pageheader .logo {
    color: $logo-col-overlay;
  }
  {% else %}
  #pageheader .logo {
    color: $logo-col;
  }
  {% endif %}

  #pageheader .logo {
    width: auto;
    text-align: center;
    display: block;
    float: none;
    margin: 0 80px;
  }

  #pageheader .logo h1 {
    text-align: center;
  }

  #pageheader .logo .image .desktop-only {
    display: none;
  }

  #pageheader .logo .image .mobile-only {
    display: inline-block;
  }

  #mobile-nav {
    display: block;
  }

  #main {
    margin-top: 0;
  }

  .title-row {
    .page-title {
      padding-left: 0;
      padding-right: 0;
    }
    .next-prev {
      position: relative;
      height: 2em;
      a {
        top: 0;
        margin-top: 0;
      }
    }
  }

  .first-in-row {
    clear: none;
  }

  #related-products .product-list a {
    width: 33.333%;
  }

  .cart-list {
    margin-left: 0;
    margin-right: 0;
  }

  .cart-list .head,
  .cart-list .col-price {
    display: none;
  }


  .cart-list .col-quantity,
  .cart-list .col-total,
  .cart-list .col-remove {
    width: 33.3%;
  }

  .cart-list .col-remove a {
    content: 'Remove';
  }

  .cart-list .col-desc {
    float: none;
    width: auto;
    margin-bottom: 1em;
    @include clearfix();
  }

  .cart-list .col-notdesc {
    clear: both;
