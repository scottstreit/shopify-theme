  padding: 5px 22px 4px 11px;
  outline: none;
  -moz-border-radius: 0px;
  -webkit-border-radius: 0px;
  border-radius: 0px;
  display: inline-block;
  -webkit-appearance: none;
  appearance: none;
  color: #444;
  background: white url({{ 'select.png' | asset_url }}) no-repeat right center;
  cursor: pointer;
  min-width: 120px;
  max-width: 100%;
  /* IE10+ hackery */
  &::-ms-expand {
    display: none;
  }

  .ie8, .ie9 & {
    background: white;
    padding-right: 10px;
  }
}

/* FF hackery */
@-moz-document url-prefix() {
  select {
    background-image: none;
  }
}

hr {
